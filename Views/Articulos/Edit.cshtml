@{
}

<h3> Editar Articulo </h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div class="form-group">
                <label class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Tipo</label>
                <input asp-for="Tipo" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Marca</label>
                <input asp-for="Marca" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Proveedor</label>
                <input asp-for="Proveedor" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Min Stock</label>
                <input asp-for="MinStock" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Costo</label>
                <input asp-for="Costo" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Margen</label>
                <input asp-for="Margen" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Codigo</label>
                <input asp-for="Codigo" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <br />
                <label>@ViewBag.Mensaje</label>
            </div>
        </form>
    </div>
</div>

<div class="boton-back">
    <a asp-action="Index">Volver</a>
</div>
