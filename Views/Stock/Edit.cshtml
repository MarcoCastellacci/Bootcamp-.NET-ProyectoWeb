@{
}
@model StockViewModel


<h3> Actualizar Stock </h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div class="form-group">
                <label class="control-label">Deposito</label>
                @Html.DropDownListFor(model => model.StockDTO.IdDeposito,Model.selectDepositoList, "Seleccione un depósito", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label">Articulo</label>
                @Html.DropDownListFor(model => model.StockDTO.IdArticulo,Model.selectArticuloList, "Seleccione un articulo", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label">Cantidad</label>
                <input asp-for="StockDTO.Cantidad" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary m-2" />
                <br />
                <label>@ViewBag.Mensaje</label>
            </div>
        </form>
    </div>
</div>

<div class="boton-back">
    <a asp-action="Index">Volver</a>
</div>